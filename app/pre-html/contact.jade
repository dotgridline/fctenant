extends includes/layout-template

block content
  div.row
    div(class="small-12 columns owl-theme owl-carousel office-gallery", id="office-gallery")
      div: img(src="images/office-img-1.jpg",alt="")
      div: img(src="images/office-img-2.jpg",alt="")
      div: img(src="images/office-img-3.jpg",alt="")
      div: img(src="images/office-img-4.jpg",alt="")
      div: img(src="images/office-img-5.jpg",alt="")
  
  div.row
    div.small-5.columns
          h4 Contact Us
          p We are here to answer any questions you may have about our First-Choice Tenant's experiences. Even if there is something you have always wanted to experience and can't find it on First-Choice Tenant, let us know
          form
            label Name
                  input(type="text")
            label Email
                  input(type="email")        
            label Message
                  textarea(style="resize:vertical")
            label How Much is 5+6? (Security Question)
                  input(type="number")
            input(type="submit",value="Send",class="button green radius expand")

    div.small-5.small-offset-1.columns.text-right
          h4 Customer Service
          p Tel: (888) 878-1595<br>Fax: (888) 949-2010<br>M-F 9:00 am â€“ 5:30pm EST<br><a href="mailto: support@firstchoicebackground.com">support@firstchoicebackground.com</a>


          h4 Address
          p 6365 Taft Street<br>Suite 2000<br>Hollywood, Florida 33024
          iframe(width="350",height="250",frameborder="0",style="border:0",src="https://www.google.com/maps/embed/v1/place?q=6365%20Taft%20Street%2C%20Hollywood%2C%20FL%2C%20United%20States&key=AIzaSyAPmOUuh567QKXqRFSH-kmaMEpU0GQ9hpY") 

block append-to-scripts    
  link(rel="stylesheet", href="css/owl-carousel.css")
  script(src="js/owl.carousel.min.js")
  script.
    $(document).ready(function() {
      var owl = $("#office-gallery");     
      owl.owlCarousel({
      navigation : true,
      singleItem : true,
      transitionStyle : "fade",
      lazyLoad:true,
      navigationText: ["<",">"],  
      });  
    });